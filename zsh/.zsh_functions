# vim: ft=zsh

# Local IP
localip() {
    ifconfig | grep "inet " | grep -Fv 127.0.0.1 | awk '{print $2}'
}

# Better tree lists
tt() {
    tree -I '.git|.node_modules|.DS_Store' --dirsfirst --filelimit 15 -L ${1:-3} -aC $2
}

# fkill - kill process
fkill() {
    local pid
    pid=$(ps -ef | sed 1d | fzf -m | awk '{print $2}')

    if [ "x$pid" != "x" ]
    then
        echo $pid | xargs kill -${1:-9}
    fi
}

# Mac OS Dock Helper
dock-add-spacer() {
    if [ `command -v defaults` ]; then
        defaults write com.apple.dock persistent-apps -array-add '{"tile-type"="spacer-tile";}'
        killall Dock
    fi
}

# dotfile helper functions
dotfile_config_folder () {
    if ! [ -d "$DOTFILE_CONFIG_HOME" ]; then
        mkdir -p "$DOTFILE_CONFIG_HOME"
    fi
}

dotfile_sdk_folder () {
    if ! [ -d "$DOTFILE_SDK_HOME" ]; then
        mkdir -p "$DOTFILE_SDK_HOME"
    fi
}
