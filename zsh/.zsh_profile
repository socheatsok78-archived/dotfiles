export DOTFILE_HOME="$HOME/.dotfile"

#* >>> Welcome >>>
function andrew() {
  echo -e "     _              _                   "
  echo -e "    / \   _ __   __| |_ __ _____      __"
  echo -e "   / _ \ | '_ \ / _\` | '__/ _ \ \ /\ / /"
  echo -e "  / ___ \| | | | (_| | | |  __/\ V  V / "
  echo -e " /_/   \_\_| |_|\__,_|_|  \___| \_/\_/  "
  echo -e " \n A senior developer is helpful, not all- \n knowing.\n"
}

# Prompt Components
prompt_context() {}

# Preferred editor for local and remote sessions
export EDITOR='nano'
export GUI_EDITOR='code'

# Add ./local/bin to $PATH
export PATH="$PATH:$HOME/.local/bin:$HOME/.bin"

# ========================================
# Parsing all zsh .dotfiles
# ========================================
test -e "$HOME/.zsh_aliases" && source "$HOME/.zsh_aliases"
test -e "$HOME/.zsh_completion" && source "$HOME/.zsh_completion"
test -e "$HOME/.zsh_functions" && source "$HOME/.zsh_functions"
test -e "$HOME/.zsh_plugins" && source "$HOME/.zsh_plugins"

# Entrypoint
function welcome() {
  if [ `command -v lolcat` ]; then
    andrew | lolcat;
  else
    andrew;
  fi
}

welcome;
