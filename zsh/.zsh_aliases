# vim: ft=zsh

# ZSH
alias zshconfig="$GUI_EDITOR ~/.zshrc"
alias ohmyzsh="$GUI_EDITOR ~/.oh-my-zsh"
alias zshreload="source ~/.zshrc"

# Aliases
alias back='if [ -n "$OLDPWD" ]; then cd "$OLDPWD"; fi'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'
alias .6='cd ../../../../../..'
alias reload='source ~/.zshrc'

# fs
alias ls='ls -GpF'
alias ll='ls -alGpF'
alias lh="ll -h" # human readable file sizes
alias lx="exa --long --all --git"

# Tools
# - ignore alias: \cat or command cat
alias gpg="gpg2"
alias cat='bat'
alias ping='prettyping --nolegend'
alias top='sudo htop' # alias top and fix high sierra bug
alias help='tldr'
alias hosts="sudo nano /etc/hosts"

# No fuck given
alias fk='fuck'
alias tf='fuck'
alias wtf='fuck'

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

# Edit PHP ini
alias php.ini="$EDITOR $(php --ini | grep Loaded | grep php.ini | awk '{print $4}')"

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# Projects & Work folder aliases
alias @project='if ! [ -d "$HOME/Projects" ]; then mkdir -p "$HOME/Projects"; fi; cd "$HOME/Projects";'
alias @work='if ! [ -d "$HOME/Work" ]; then mkdir -p "$HOME/Work"; fi; cd "$HOME/Work";'
