# ZSH
alias zshconfig="$GUI_EDITOR ~/.zshrc"
alias ohmyzsh="$GUI_EDITOR ~/.oh-my-zsh"
alias zshreload="source ~/.zshrc"

# Aliases
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'
alias .6='cd ../../../../../..'
alias reload='source ~/.zshrc'

# fs
alias ls='ls -GpF'
alias ll='ls -alGpF'

# Tools
# - ignore alias: \cat or command cat
alias cat='bat'
alias ping='prettyping --nolegend'
alias top='sudo htop' # alias top and fix high sierra bug
alias help='tldr'

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# OSX
if [ `command -v defaults` ]; then
  alias dock-add-divider="defaults write com.apple.dock persistent-apps -array-add '{\"tile-type\"=\"spacer-tile\";}'; sleep 1; killall Dock"
fi
